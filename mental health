<section class="anonymous-engagement">
    <h2>Anonymous Engagement</h2>
    <div class="engagement-container">
        <div class="engagement-box" id="engagement-box">
            <!-- Anonymous messages will be appended here -->
        </div>
        <div class="engagement-input">
            <input type="text" id="anonymous-input" placeholder="Share your thoughts anonymously..." onkeypress="handleKeyPress(event)">
            <button onclick="sendAnonymousMessage()">Send</button>
        </div>
    </div>
</section>
<script>
    function handleKeyPress(event) {
        if (event.key === 'Enter') {
            sendAnonymousMessage();
        }
    }

    function sendAnonymousMessage() {
        const userInput = document.getElementById('anonymous-input').value;
        if (userInput.trim() !== '') {
            appendMessage('anonymous', userInput);
            document.getElementById('anonymous-input').value = '';
            // Simulate a response or just display the message
            setTimeout(() => {
                appendMessage('response', 'Thank you for sharing. Your message has been received.');
            }, 1000);
        }
    }

    function appendMessage(sender, message) {
        const engagementBox = document.getElementById('engagement-box');
        const messageElement = document.createElement('div');
        messageElement.classList.add('engagement-message', sender);
        messageElement.innerText = message;
        engagementBox.appendChild(messageElement);
        engagementBox.scrollTop = engagementBox.scrollHeight;
    }
</script>

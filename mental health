<section class="diagnosis">
    <h2>Mental Health Diagnosis</h2>
    <form class="diagnosis-form">
        <label for="symptoms">Select Symptoms:</label>
        <div class="symptoms-list">
            <label><input type="checkbox" name="symptoms" value="anxiety"> Anxiety</label>
            <label><input type="checkbox" name="symptoms" value="depression"> Depression</label>
            <label><input type="checkbox" name="symptoms" value="insomnia"> Insomnia</label>
            <label><input type="checkbox" name="symptoms" value="stress"> Stress</label>
            <label><input type="checkbox" name="symptoms" value="fatigue"> Fatigue</label>
            <label><input type="checkbox" name="symptoms" value="irritability"> Irritability</label>
            <!-- Add more symptoms as needed -->
        </div>
        <button type="submit">Get Diagnosis</button>
    </form>
    <div class="diagnosis-result">
        <!-- Diagnosis results will be displayed here -->
    </div>
</section>
<script>
    document.querySelector('.diagnosis-form').addEventListener('submit', function(event) {
        event.preventDefault();
        const selectedSymptoms = Array.from(document.querySelectorAll('input[name="symptoms"]:checked')).map(el => el.value);
        let diagnosis = 'Based on your selected symptoms, you may be experiencing: ';
        
        if (selectedSymptoms.includes('anxiety') && selectedSymptoms.includes('stress')) {
            diagnosis += 'Generalized Anxiety Disorder';
        } else if (selectedSymptoms.includes('depression') && selectedSymptoms.includes('fatigue')) {
            diagnosis += 'Major Depressive Disorder';
        } else {
            diagnosis += 'a combination of symptoms that may require further evaluation by a professional.';
        }

        document.querySelector('.diagnosis-result').innerText = diagnosis;
    });
</script>
